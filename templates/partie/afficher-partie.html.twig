            </div>

{% endblock %}



{% block javascripts %}
    {{ parent() }}
    <script>
        $( function() {
            $( ".draggable" ).draggable({ revert: 'invalid' });
            $( ".droppable" ).droppable({
                accept: ".draggable",
                classes: {
                    "ui-droppable-active": "ui-state-active",
                    "ui-droppable-hover": "ui-state-hover"
                },
                drop: function( event, ui ) {
                    $( this )
                        .addClass( "ui-state-highlight" )
                }
            });
        } );
    </script>
{% endblock %}

